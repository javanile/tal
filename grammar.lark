// grammar.lark - grammatica base per Tal

start: statement*

?statement: function_call ";"                     -> func_stmt
          | "{" statement* "}"                   -> block_stmt

function_call: NAME "(" [arguments] ")"

arguments: argument ("," argument)*

?argument: NUMBER
         | STRING
         | function_call
         | block

NAME: /[a-zA-Z_][a-zA-Z0-9_]*/

NUMBER: /\d+/

STRING: /"[^"]*"/

%ignore /\s+/
%ignore /\/\/[^\n]*/   // commenti stile C++
